@model RI.UtilityApp.Models.TransactionLoadTestModel

@{
    ViewData["Title"] = "Index";
}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PartnerId" class="control-label"></label>
                    <select asp-for="PartnerId" class="form-control selectpicker" data-live-search="true" asp-items="@(Model.Partners)">
                        <option>Please select one</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="NumberOfTerminals" class="control-label"></label>
                    <input asp-for="NumberOfTerminals" class="form-control" />
                    <span asp-validation-for="NumberOfTerminals" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumberOfTransactionPerTerminal" class="control-label"></label>
                    <input asp-for="NumberOfTransactionPerTerminal" class="form-control" />
                    <span asp-validation-for="NumberOfTransactionPerTerminal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Transaction" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

        $('select').selectpicker();

    }

</main>